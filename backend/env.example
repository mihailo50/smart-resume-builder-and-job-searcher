# DJANGO SETTINGS
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000

# DATABASE
DATABASE_URL=postgresql://localhost:5432/smart_resume

